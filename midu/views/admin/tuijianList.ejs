<%include header%>
<ul class="breadcrumb">
    <li><a href="/admin/index">米读后台</a></li>
    <li><a href="#">文章管理</a></li>
    <li class="active">推荐文章</li>
</ul>

<div class="datalist">
    <div class="title">推荐文章</div>
    <table class="table">
        <thead>
            <tr>
                <td>封面</td>
                <td>标题</td>
                <td>作者</td>
                <td>创建时间</td>
                <td>栏目</td>
                <td>是否推荐</td>
                <td>描述</td>
            </tr>
        </thead>
        <%datas.forEach(function(item){%>
            <tr>
                <td><a href="/admin/articleImageUpdate/<%=item._id%>"><img src="/<%=item.imgurl%>" alt="" width="50" height="50"></a></td>
                <td><%=item.title%></td>
                <td><%=item.author%></td>
                <td><%=item.ctime.toLocaleString()%></td>
                <td><%=item.itemId.name%></td>
                <td><%=item.tuijian%></td>
                <td><%=item.description%></td>
            </tr>
        <%})%>
    </table>
   
</div>
<%include footer%>