<!-- 导航end -->
<div class="adminEdit">
    <div class="title">编辑管理员</div>
  <div class="row">
    <form action="/admin/adminUpdate" method="post" >
      <input type="hidden" name="_id" value="<%=datas._id%>">
      <div class="col-md-12">
        <div class="input-group">
          <span class="input-group-addon">账号</span>
          <input type="text" class="form-control" name="name" value="<%=datas.name%>">
        </div>
      </div>

      <div class="col-md-12"style="margin-top:20px;">
        <div class="input-group">
          <span class="input-group-addon">密码</span>
          <input type="password" class="form-control" name="password" value="<%=datas.password%>">
        </div>
      </div>

      <div class="col-md-12" style="margin-top:20px;">
        <div class="input-group">
          <span class="input-group-addon">简介</span>
          <input type="text" class="form-control" name="info" value="<%=datas.info%>">
        </div>
      </div>
      
      <div class="col-md-6" style="margin:20px 0 0 300px;">
        <input type="submit" class="btn btn-success" value="保存数据">
      </div>
    </form> 
  </div>
	</div>

