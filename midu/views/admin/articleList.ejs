<%include header%>
<ul class="breadcrumb">
    <li><a href="/admin/index">米读后台</a></li>
    <li><a href="#">文章管理</a></li>
    <li class="active">文章列表</li>
</ul>

<div class="datalist">
    <div class="title">文章列表</div>
    <table class="table">
        <thead>
            <tr>
                <td>封面</td>
                <td>标题</td>
                <td>作者</td>
                <td>创建时间</td>
                <td>栏目</td>
                <td>是否推荐</td>
                <td>描述</td>
                <td>操作</td>
            </tr>
        </thead>
        <%datas.forEach(function(item){%>
            <tr>
                <td><a href="/admin/articleImageUpdate/<%=item._id%>"><img src="/<%=item.imgurl%>" alt="" width="50" height="50"></a></td>
                <td><%=item.title%></td>
                <td><%=item.author%></td>
                <td><%=item.ctime.toLocaleString()%></td>
                <td><%=item.itemId.name%></td>
                <td><%=item.tuijian%></td>
                <td><%=item.description%></td>
                <td>
                    <a href="/admin/articleEdit/<%=item._id%>">详情/编辑</a>
                    <a href="/admin/articleRemove/<%=item._id%>" onclick="return confirm('您确定要删除吗？')">删除</a>
                </td>
            </tr>
        <%})%>
    </table>
    <!-- 分页 -->
	<nav aria-label="Page navigation">
            <ul class="pagination">
              <li><a href="/admin/articleList">首页</a></li>
              <li><a href="/admin/articleList?page=<%= page-1 %>">上一页</a></li>
              <% for(var i=1;i<= pageMax;i++){ %>
                  <li><a href="/admin/articleList?page=<%=i%>"><%=i%></a></li>
              <% } %>
              <li><a href="/admin/articleList?page=<%= -(-page-1) %>">下一页</a></li>
              <li><a href="/admin/articleList?page=<%=pageMax%>">尾页</a></li>
            </ul>
          </nav>
    <!-- 分页end -->
</div>
<%include footer%>