<%include header%>

<article>
  <h1 class="t_nav"><a href="/" class="n1">网站首页</a><a href="/" class="n2">详情</a></h1>
  <div class="infos">
    <div class="newsview">
      <h3 class="news_title"><%-iteminfo.title%></h3>
      <div class="news_author"><span class="au01"><a href="mailto:dancesmiling@qq.com"><%-iteminfo.author%></a></span><span class="au02"><%-iteminfo.ctime%></span></div>
      <div class="tags"><a href="/e/tags/?tagname=%B8%F6%C8%CB%B2%A9%BF%CD&amp;tempid=13" target="_blank">类型</a> &nbsp; <a href="/e/tags/?tagname=%D0%A1%CA%C0%BD%E7&amp;tempid=13" target="_blank"><%-iteminfo.keywords%></a></div>
      <div class="news_about"><strong>描述</strong><%-iteminfo.description%></div>
      <div class="news_infos"> 
          <%-iteminfo.content%>
        </div>
    </div>
    <div class="share"> </div>
   
   
    
  </div>
  <div class="sidebar">
    <div class="search">
      <form action="/e/search/index.php" method="post" name="searchform" id="searchform">
        <input name="keyboard" id="keyboard" class="input_text" value="" style="color: rgb(153, 153, 153);" onfocus="if(value=='小说'){this.style.color='#000';value=''}" onblur="if(value==''){this.style.color='#999';value='������ؼ���'}" type="text">
        <input name="show" value="title" type="hidden">
        <input name="tempid" value="1" type="hidden">
        <input name="tbname" value="news" type="hidden">
        <input name="Submit" class="input_submit" value="搜索" type="submit">
      </form>
    </div>
  
    <div class="paihang">
      <h2 class="hometitle">热门推荐</h2>
      <ul>
          <% info.forEach(function(info){ %>
            <li>
                <p><i><img src="/<%=info.imgurl%>"></i>
                  <b><a href="/info/<%=info._id%>" target="_blank"><%=info.title%></a></b><%=info.author%></p>
              </li>
       <%})%>
      </ul>
    </div>
  </div>
</article>
<footer>
  <p>Design by <a href="/">Copyright Statement: Adaptation by Guo Yuxue on March 23, 2019</a></p>
</footer>
<script src="js/nav.js"></script> 
<script type="text/javascript">
jQuery.noConflict();
jQuery(function() { 
    var elm = jQuery('#left_flow2'); 
    var startPos = jQuery(elm).offset().top; 
    jQuery.event.add(window, "scroll", function() { 
        var p = jQuery(window).scrollTop(); 
        jQuery(elm).css('position',((p) > startPos) ? 'fixed' : ''); 

        jQuery(elm).css('top',((p) > startPos) ? '0' : '');
    }); 
}); 
</script>
</body>
</html>
